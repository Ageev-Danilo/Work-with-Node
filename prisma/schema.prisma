generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Post{
  id Int @id @default(autoincrement())
  name String
  descrption String
  image String
  likes Int
  tags TagsInPosts[]

}

model Tag{
  id Int @id @default(autoincrement())
  name String
  posts TagsInPosts[]
}

model TagsInPosts{
  post Post @relation(fields: [postId], references: [id])
  postId Int 
  tag Tag @relation(fields: [tagId], references: [id])
  tagId Int 
  @@id([postId, tagId])
}