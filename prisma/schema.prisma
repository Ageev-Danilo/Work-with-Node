generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url = env("DATABASE_URL")
}

model Post{
  id Int @id @default(autoincrement())
  name String
  description String
  image String
  likes Int
  tags TagsInPosts[]
  creator User @relation(fields:[createdBy], references: [email])
  createdBy String 
  likedBy PostLike[]

}

model Tag{
  id Int @id @default(autoincrement())
  name String
  posts TagsInPosts[]
}

model TagsInPosts{
  post Post @relation(fields: [postId], references: [id])
  postId Int 
  tag Tag @relation(fields: [tagId], references: [id])
  tagId Int 
  @@id([postId, tagId])
}

model User{
  id Int @id @default(autoincrement())
  firstName String
  secondName String
  email String @unique
  avatar String?
  password String
  isAdmin Boolean @default(false)
  createdPosts Post[]
  likedPosts PostLike[]
}

model PostLike{
  post Post @relation(fields: [postId], references: [id])
  postId Int 
  user User @relation(fields: [email], references: [id])
  email Int 
  @@id([postId, email])
}